Subject: [PATCH 1/4] Make the script find the correct system map file.

---
 pre-build.sh | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/pre-build.sh b/pre-build.sh
index 88ec680..6f45523 100755
--- a/pre-build.sh
+++ b/pre-build.sh
@@ -27,6 +27,6 @@ source amd/backport/symbols
 
 echo '// auto generated by DKMS pre-build.sh' > amd/backport/symbols.c
 for sym in $SYMS; do
-    addr=$(grep $sym /boot/System.map-$KERNELVER | awk -F' ' '{print $1}')
+    addr=$(grep $sym /boot/System.map*-$KERNELVER | awk -F' ' '{print $1}')
     echo "void *$sym = (void *)0x$addr;" >> amd/backport/symbols.c
 done
